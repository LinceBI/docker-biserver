setlocal

cd /D "%~dp0"

call "%~dp0set-pentaho-env.bat" "%~dp0jre"

rem ------------------------------------------------------------
rem Set a variable for DI_HOME (to be used as a system property)
rem The plugin loading system for kettle needs this set to know
rem where to load the plugins from.
rem ------------------------------------------------------------
set DI_HOME=%~dp0<%= ENV['SOLUTIONS_DIRNAME'] %>\system\kettle

cd "%~dp0tomcat\bin"
set JAVA_HOME=%_PENTAHO_JAVA_HOME%
set CATALINA_HOME=%~dp0tomcat
set CATALINA_OPTS=^
	-Dfile.encoding=utf8 -Dsun.rmi.dgc.client.gcInterval=3600000 -Dsun.rmi.dgc.server.gcInterval=3600000 ^
	-Xms<%= ENV['JAVA_XMS'] %> -Xmx<%= ENV['JAVA_XMX'] %> <%= ENV['CATALINA_OPTS_EXTRA'] %> ^
	-DDI_HOME="%DI_HOME%"
call .\startup.bat

endlocal
