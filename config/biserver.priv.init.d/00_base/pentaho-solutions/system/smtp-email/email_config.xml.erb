<?xml version="1.0" encoding="UTF-8"?>
<email-smtp>
	<properties>
		<mail.transport.protocol><%= ENV['MAIL_TRANSPORT_PROTOCOL'] %></mail.transport.protocol>
		<mail.smtp.host><%= ENV['MAIL_SMTP_HOST'] %></mail.smtp.host>
		<mail.smtp.port><%= ENV['MAIL_SMTP_PORT'] %></mail.smtp.port>
		<mail.smtp.auth><%= ENV['MAIL_SMTP_AUTH'] %></mail.smtp.auth>
		<mail.smtp.auth.mechanisms><%= ENV['MAIL_SMTP_AUTH_MECHANISMS'] %></mail.smtp.auth.mechanisms>
		<mail.smtp.starttls.enable><%= ENV['MAIL_SMTP_STARTTLS'] %></mail.smtp.starttls.enable>
		<mail.smtp.ssl><%= ENV['MAIL_SMTP_SSL'] %></mail.smtp.ssl>
		<mail.smtp.quitwait><%= ENV['MAIL_SMTP_QUITWAIT'] %></mail.smtp.quitwait>
		<mail.debug><%= ENV['MAIL_DEBUG'] %></mail.debug>
	</properties>
	<mail.userid><%= ENV['MAIL_SMTP_USER'] %></mail.userid>
	<mail.password><%= %x(/usr/share/biserver/bin/encr.sh -kettle "ENC:$(printf -- '%s' "${MAIL_SMTP_PASSWORD:?}" | base64 -w0)") %></mail.password>
	<mail.client.id><%= ENV['MAIL_SMTP_XOAUTH2_CLIENT_ID'] %></mail.client.id>
	<mail.client.secret><%= ENV['MAIL_SMTP_XOAUTH2_CLIENT_SECRET'] %></mail.client.secret>
	<mail.scope><%= ENV['MAIL_SMTP_XOAUTH2_SCOPE'] %></mail.scope>
	<mail.token.url><%= ENV['MAIL_SMTP_XOAUTH2_TOKEN_URL'] %></mail.token.url>
	<mail.grant.type><%= ENV['MAIL_SMTP_XOAUTH2_GRANT_TYPE'] %></mail.grant.type>
	<mail.authorization.code><%= ENV['MAIL_SMTP_XOAUTH2_AUTHORIZATION_CODE'] %></mail.authorization.code>
	<mail.redirect.uri><%= ENV['MAIL_SMTP_XOAUTH2_REDIRECT_URI'] %></mail.redirect.uri>
	<mail.refresh.token><%= ENV['MAIL_SMTP_XOAUTH2_REFRESH_TOKEN'] %></mail.refresh.token>
	<mail.from.default><%= ENV['MAIL_SMTP_FROM_ADDRESS'] %></mail.from.default>
	<mail.from.name><%= ENV['MAIL_SMTP_FROM_NAME'] %></mail.from.name>
</email-smtp>
