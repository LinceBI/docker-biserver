-- DROP DATABASE IF EXISTS "<%= ENV['POSTGRES_JACKRABBIT_DATABASE'] %>";
-- DROP USER IF EXISTS "<%= ENV['POSTGRES_JACKRABBIT_USER'] %>";

DO $$
BEGIN
	CREATE USER "<%= ENV['POSTGRES_JACKRABBIT_USER'] %>" PASSWORD '<%= ENV['POSTGRES_JACKRABBIT_PASSWORD'] %>';
	EXCEPTION WHEN DUPLICATE_OBJECT THEN RAISE NOTICE 'User "<%= ENV['POSTGRES_JACKRABBIT_USER'] %>" already exists';
END
$$;
CREATE DATABASE "<%= ENV['POSTGRES_JACKRABBIT_DATABASE'] %>" WITH OWNER = "<%= ENV['POSTGRES_JACKRABBIT_USER'] %>" ENCODING = 'UTF8' TABLESPACE = pg_default;
GRANT ALL PRIVILEGES ON DATABASE "<%= ENV['POSTGRES_JACKRABBIT_DATABASE'] %>" TO "<%= ENV['POSTGRES_JACKRABBIT_USER'] %>";
