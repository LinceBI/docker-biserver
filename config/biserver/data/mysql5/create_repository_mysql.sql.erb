-- DROP DATABASE IF EXISTS `<%= ENV['MYSQL_HIBERNATE_DATABASE'] %>`;
-- DROP USER IF EXISTS `<%= ENV['MYSQL_HIBERNATE_USER'] %>`;

CREATE USER IF NOT EXISTS `<%= ENV['MYSQL_HIBERNATE_USER'] %>`@`%`;
CREATE DATABASE `<%= ENV['MYSQL_HIBERNATE_DATABASE'] %>` DEFAULT CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci;

GRANT ALL ON `<%= ENV['MYSQL_HIBERNATE_DATABASE'] %>`.* TO `<%= ENV['MYSQL_HIBERNATE_USER'] %>`@`%` IDENTIFIED BY '<%= ENV['MYSQL_HIBERNATE_PASSWORD'] %>';

COMMIT;
