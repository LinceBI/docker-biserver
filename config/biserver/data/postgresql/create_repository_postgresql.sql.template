DROP DATABASE IF EXISTS "%PG_HIBERNATE_DATABASE%";
DROP USER IF EXISTS "%PG_HIBERNATE_USER%";

CREATE USER "%PG_HIBERNATE_USER%" PASSWORD '%PG_HIBERNATE_PASSWORD%';
CREATE DATABASE "%PG_HIBERNATE_DATABASE%" WITH OWNER = "%PG_HIBERNATE_USER%" ENCODING = 'UTF8' TABLESPACE = pg_default;

GRANT ALL PRIVILEGES ON DATABASE "%PG_HIBERNATE_DATABASE%" TO "%PG_HIBERNATE_USER%";
