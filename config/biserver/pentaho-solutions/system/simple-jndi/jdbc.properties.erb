<%- if ENV['STORAGE_TYPE'] == 'local' -%>
Hibernate/type=javax.sql.DataSource
Hibernate/driver=org.hsqldb.jdbcDriver
Hibernate/url=jdbc:hsqldb:hsql://localhost:<%= ENV['HSQLDB_PORT'] %>/hibernate
Hibernate/user=hibuser
Hibernate/password=password
<%- elsif ENV['STORAGE_TYPE'] == 'postgres' -%>
Hibernate/type=javax.sql.DataSource
Hibernate/driver=org.postgresql.Driver
Hibernate/url=<%= ENV['POSTGES_HIBERNATE_JDBC_URL'] %>
Hibernate/user=<%= ENV['POSTGRES_HIBERNATE_USER'] %>
Hibernate/password=<%= ENV['POSTGRES_HIBERNATE_PASSWORD'] %>
<%- elsif ENV['STORAGE_TYPE'] == 'cockroach' -%>
Hibernate/type=javax.sql.DataSource
Hibernate/driver=org.postgresql.Driver
Hibernate/url=<%= ENV['COCKROACH_HIBERNATE_JDBC_URL'] %>
Hibernate/user=<%= ENV['COCKROACH_HIBERNATE_USER'] %>
Hibernate/password=<%= ENV['COCKROACH_HIBERNATE_PASSWORD'] %>
<%- elsif ENV['STORAGE_TYPE'] == 'mysql' -%>
Hibernate/type=javax.sql.DataSource
Hibernate/driver=com.mysql.jdbc.Driver
Hibernate/url=<%= ENV['MYSQL_HIBERNATE_JDBC_URL'] %>
Hibernate/user=<%= ENV['MYSQL_HIBERNATE_USER'] %>
Hibernate/password=<%= ENV['MYSQL_HIBERNATE_PASSWORD'] %>
<%- end -%>

