<?xml version="1.0" encoding="UTF-8"?>
<Context path="/%WEBAPP_PENTAHO_DIRNAME%" docBase="webapps/%WEBAPP_PENTAHO_DIRNAME%">

	<Resource name="jdbc/Hibernate" auth="Container" type="javax.sql.DataSource"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" maxActive="20" minIdle="0" maxIdle="5" initialSize="0"
		maxWaitMillis="10000" username="hibuser" password="password"
		driverClassName="org.hsqldb.jdbcDriver" url="jdbc:hsqldb:hsql://localhost:%HSQLDB_PORT%/hibernate"
		validationQuery="select count(*) from INFORMATION_SCHEMA.SYSTEM_SEQUENCES" />

	<Resource name="jdbc/Quartz" auth="Container" type="javax.sql.DataSource"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" maxActive="20" minIdle="0" maxIdle="5" initialSize="0"
		maxWaitMillis="10000" username="pentaho_user" password="password"
		driverClassName="org.hsqldb.jdbcDriver" url="jdbc:hsqldb:hsql://localhost:%HSQLDB_PORT%/quartz"
		validationQuery="select count(*) from INFORMATION_SCHEMA.SYSTEM_SEQUENCES" />

</Context>
